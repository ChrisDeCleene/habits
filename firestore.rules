rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Habits collection
    match /habits/{habitId} {
      // Allow read if user is authenticated and is the owner
      allow read: if isOwner(resource.data.userId);

      // Allow create if user is authenticated and sets userId to their own ID
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      // Allow update/delete if user owns the habit
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Habit logs collection
    match /habitLogs/{logId} {
      // Allow read if user is authenticated and is the owner
      allow read: if isOwner(resource.data.userId);

      // Allow create if user is authenticated and sets userId to their own ID
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      // Allow update/delete if user owns the log
      allow update, delete: if isOwner(resource.data.userId);
    }
  }
}
